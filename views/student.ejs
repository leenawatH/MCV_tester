<!DOCTYPE html>
<html language="en">
<head>
  <title>Student</title>
  <%- include('./partials/style'); %>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <%- include('./partials/header'); %>
    <!-- Content -->
    <div class="row gx-5" style="margin-top:30px ">
      <div class="container px-4">
        <h1>List of <%= students.length %> students</h1>
            <% for(let i=0; i<=students.length; i++) { %>
                <table class="table table-borderless " >
                    <% if(students.length - i - 1 >=3){ %>
                        <td style="width: 6rem;"><div class="col card border-light mb-3" style="width: 18rem;">
                        <div class="card-header text-white bg-primary ">Student #<%= i+1 %></div>
                        <div class="card-body">
                        <h5 class="card-title"><%= students[i].firstname +" "+ students[i].lastname  %></h5>
                        <p class="card-text">Age: <%= students[i].age %><br>e-mail: <% if(students[i].firstname.length >5 ) { %> <br> <% } %><%= students[i].email %></p>
                        </div>
                        </div></td>
                        <% i++ %>
                        <td style="width: 6rem;"><div class="col card border-light mb-3" style="width: 18rem;">
                            <div class="card-header text-white bg-primary ">Student #<%= i+1 %></div>
                            <div class="card-body">
                            <h5 class="card-title"><%= students[i].firstname +" "+ students[i].lastname  %></h5>
                            <p class="card-text">Age: <%= students[i].age %><br>e-mail: <% if(students[i].firstname.length >5 ) { %> <br> <% } %><%= students[i].email %></p>
                            </div>
                        </div></td>
                        <% i++ %>
                        <td style="width: 6rem;"><div class="col card border-light mb-3" style="width: 18rem;">
                            <div class="card-header text-white bg-primary ">Student #<%= i+1 %></div>
                            <div class="card-body">
                            <h5 class="card-title"><%= students[i].firstname +" "+ students[i].lastname  %></h5>
                            <p class="card-text">Age: <%= students[i].age %><br>e-mail: <% if(students[i].firstname.length >5 ) { %> <br> <% } %><%= students[i].email %></p>
                            </div>
                        </div></td>
                    <% }else{ %>
                        <% for(let j=0; j<=2; j++) { %>
                            <% i = j+i %>
                            <% if(i > students.length){ %>
                                <td ><div class="col card border-light " style="width: 18rem;">
                                        </div></td>
                                <% }else{ %>
                                    <td><div class="col card border-light mb-3" style="width: 18rem;">
                                        <div class="card-header text-white bg-primary ">Student #<%= i+1 %></div>
                                        <div class="card-body">
                                        <h5 class="card-title"><%= students[i].firstname +" "+ students[i].lastname  %></h5>
                                        <p class="card-text">Age: <%= students[i].age %><br>e-mail: <% if(students[i].firstname.length >5 ) { %> <br> <% } %><%= students[i].email %></p>
                                        </div>
                                        </div></td>
                                    <% } %>
                            <% } %>
                        <% } %>
                </table>
            <% } %>

    </div>
    </div>
  </div>
</body>
</html>